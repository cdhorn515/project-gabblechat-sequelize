<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Gab Home</title>
    <link rel="stylesheet" href="/static/styles.css">
  </head>
  <body>
    <header>
      <div class="navigation">

        <form class="float" action="/gabhome" method="get">
          <input type="submit" name="" value="Gabble">
        </form>

        <form class="float" action="/creategab" method="get">
          <input type="submit" name="" value="Create a new Gab">
        </form>

        {{#name}}
          <form class="float" action="/signup" method="get">
            <input type="submit" name="" value="Logged in as {{name}}">
          </form>
        {{/name}}

        {{#signedIn}}
          <form class="float" action="/login" method="get">
            <input type="submit" name="" value="Log out">
          </form>
        {{/signedIn}}

        {{^signedIn}}
        <form class="float" action="/login" method="get">
          <input type="submit" name="" value="Log in">
        </form>
        {{/signedIn}}
      </div>
    </header>

    <div class="clearFloat"></div>

{{#model}}

<fieldset class="section">
<form class="" action="/addLikes/{{id}}" method="get">
  <p>{{user.name}}: {{text}}
  <span>
    <input type="submit" name="like" value="like" id="{{id}}">
  </form>
  </span>
</p>
  <p>{{createdAt}}
  </p>
{{#UserLikes.length}}
  <form class="numOfLikes" action="/viewLikes/{{id}}" method="get">
    <input type="submit" name="" value="{{.}} like(s)" id="{{id}}">
  </form>
{{/UserLikes.length}}
  {{^UserLikes.length}}
      <span>
  <form class="numOfLikes" action="/viewLikes/{{id}}" method="get">
    <input type="submit" name="" value="no likes yet" id="{{id}}">
  </form>
  {{/UserLikes.length}}


      {{#showDeleteIfOwner}}
      {{loggedInUser}}
      {{/showDeleteIfOwner}}
    </span>
</fieldset>
{{/model}}
