<!DOCTYPE html>
<html>  <head>
    <meta charset="utf-8">
    <title>Gab Home</title>
  </head>
  <body>
    <header>

      <ul>
        <li>Gabble</li>
        <li>Create a new Gab</li>
        <!--loggedIn should be boolean  -->
        {{#loggedIn}}
        <li>Logged in as {{name}}</li>
          {{/loggedIn}}
        <!-- signedIn should be boolean -->
        {{#signedIn}}<li>Log out</li>{{/signedIn}}
      {{^signedIn}}<li>Log in</li>{{/signedIn}}
      </ul>

    </header>

{{#model}}
<fieldset>
<form class="" action="/gabhome/{{id}}" method="post">
  <p>{{user.name}}: {{text}}
  <span>
    <input type="submit" name="like" value="Like" id="{{id}}">
  </span>
</p>
  <p>{{createdAt}}</p>
</form>
</fieldset>
{{/model}}
