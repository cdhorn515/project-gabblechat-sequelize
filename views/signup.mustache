<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <title>Sign Up</title>
  <link rel="stylesheet" href="/static/styles.css">

</head>

<body>
  <header>
    <form class="" action="/gabhome" method="post">
      <input type="submit" name="" value="Gabble">
    </form>

    <form class="" action="/creategab" method="post">
      <input type="submit" name="" value="Create a new Gab">
    </form>

    {{#name}}
      <form class="" action="/signup" method="post">
        <input type="submit" name="" value="Logged in as {{name}}">
      </form>
    {{/name}}

    {{#signedIn}}
      <form class="" action="/login" method="post">
        <input type="submit" name="" value="Log out">
      </form>
    {{/signedIn}}

    {{^signedIn}}
    <form class="" action="/login" method="post">
      <input type="submit" name="" value="Log in">
    </form>
    {{/signedIn}}


  </header>

  <div class="endFloat">

  </div>
  {{msg}}

  <form class="" action="/signup" method="post">
    <div>
      <label for="name">Username</label>
      <input type="text" name="name" value="" id="name" placeholder="Username">
    </div>
    <div>
      <label for="password">Password</label>
      <input type="password" name="password" value="" id="password" placeholder="max length 12 characters">
    </div>
    <div>
      <label for="confirmPassword">Confirm Password</label>
      <input type="password" name="confirmPassword" value="" id="confirmPw" placeholder="please retype your password">
    </div>
    <div>
      <input type="submit" name="" value="Submit">
    </div>
  </form>


</body>

</html>
